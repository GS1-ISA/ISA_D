# ==== LLM ====
# One of these must be present in production mode:
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ISA_LLM_PROVIDER=openrouter  # openrouter|openai|stub
ISA_TEST_MODE=0             # set 1 to force STUB mode

# ==== Auth / App ====
ISA_AUTH_SECRET=            # required; strong random
ISA_ADMIN_USER=admin
ISA_ADMIN_PASS=change-me
ISA_USER_USER=user
ISA_USER_PASS=change-me
ISA_LOG_LEVEL=INFO
ISA_MAX_BODY_BYTES=10485760
ISA_RATE_QPS=20

# ==== Integrations (uncomment if used) ====
# NEO4J_URI=neo4j://localhost:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=
# SUPABASE_URL=
# SUPABASE_ANON_KEY=
# FIGMA_FILE_KEY=
# FIGMA_ACCESS_TOKEN=

# ==== Embeddings ====
ISA_EMBEDDING_BACKEND=openai
ISA_EMBEDDING_MODEL=text-embedding-3-large

# ==== Storage ====
ISA_MEMORY_FILE=storage/memory.json
