#!/bin/bash

# Define the absolute path to the project root directory
PROJECT_ROOT="/Users/frisowempe/Desktop/ISA_B/2-main/ISA_SuperDesign_VSCode_Copilot_OneShot_2025-08-17"

# Navigate to the project root
cd "$PROJECT_ROOT" || { echo "Error: Could not change to project directory: $PROJECT_ROOT"; exit 1; }

# Activate the Python virtual environment
source .venv/bin/activate || { echo "Error: Could not activate virtual environment. Make sure .venv exists and is set up correctly at $PROJECT_ROOT/.venv"; exit 1; }

# Start the FastAPI server
echo "Starting FastAPI server..."
uvicorn src.api_server:app --reload --port 8787

echo "FastAPI server started. Keep this terminal open."
echo "You can now open the ISA desktop application."
